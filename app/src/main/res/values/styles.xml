<resources>

    <!-- Global Text. Start -->
    <style name="Text" />

    <style name="Text.Primary">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/font_secondary</item>
    </style>

    <style name="Text.Date">
        <item name="android:textColor">@color/text_date</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <!-- Global Text. End -->

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/spacing_micro</item>
        <item name="titleTextColor">?colorSecondary</item>
    </style>

    <style name="AppToolbar.Collapsing">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppToolbar.WithTabs">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?colorSecondary</item>
        <item name="tabSelectedTextColor">?colorSecondary</item>
        <item name="tabTextColor">@color/text_inactive</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="AppBottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_item_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_selector</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@color/content_background</item>
    </style>

    <style name="RefreshButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:text">@string/msg_refresh</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="FollowButton" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:text">@string/msg_follow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="iconSize">@dimen/button_icon_size</item>
    </style>

    <style name="ForumNumText" parent="Text.Primary">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/font_secondary</item>
    </style>

    <style name="ForumNumSubtext" parent="Text.Secondary">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TopicChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/chip_topic_text</item>
        <item name="chipBackgroundColor">@color/chip_topic_background</item>
        <item name="chipStrokeColor">@color/chip_topic_border</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="DiscussionButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:minWidth">66dp</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="iconPadding">@dimen/spacing_micro</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="iconTint">?colorSecondary</item>
        <item name="strokeColor">?colorSecondary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="DiscussionDetailsTitle" parent="Text.Primary">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="DiscussionDetailsMessage" parent="Text.Secondary">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="UserDetailsText" parent="Text.Secondary">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CommentVoteText" parent="Text.Primary">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CommentVoteText.Upvote">
        <item name="android:drawableEnd">@drawable/ic_arrow_upward</item>
    </style>

    <style name="CommentVoteText.Downvote">
        <item name="android:drawableEnd">@drawable/ic_arrow_downward</item>
    </style>

</resources>
